<!DOCTYPE html>
<html lang="it">
<body>
    <script>
        function generaOutput() {
            const numero = parseInt(document.getElementById('numero').value);
            const outputDiv = document.getElementById('output');
            outputDiv.innerHTML = '';
            for (let i = 0; i <= numero; i++) {
                const coppia = `${i} - ${numero - i}`;
                const paragrafo = document.createElement('p');
                paragrafo.textContent = coppia;
                outputDiv.appendChild(paragrafo);
            }
        }
    </script>
    <h1>Compito con ciclo for</h1>
    <form id="inputForm">
        <label for="numero">Inserisci un numero:</label>
        <input type="number" id="numero" name="numero" min="0" required>
        <button type="button" onclick="generaOutput()">Genera</button>
    </form>
    <h2>Coppie di numeri:</h2>
    <div id="output"></div>
</body>
</html>
